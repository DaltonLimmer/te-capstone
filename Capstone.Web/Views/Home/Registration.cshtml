@model Capstone.Web.Models.ViewModels.Registration
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="register">
    <h2>Registration</h2>

    @using (Html.BeginForm("PostUserRegistration", "Home", FormMethod.Post))
    {
        <div>
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
            @Html.ValidationMessageFor(m => m.FirstName)
            
        </div>

        <div>
            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>

        <div>
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.ValidationMessage("username-exists")
        </div>
        <div>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)
            
        </div>
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <button>Register</button>
    }
</div>
