@model Capstone.Web.Models.ViewModels.Course


<div id="createCourse">

    <div class="modal-header">
        <h1> Add a New Course</h1>
    </div>

    @using (Html.BeginForm("AddNewCourse", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="Name">Enter Course Name</label>
            @Html.TextBoxFor(m => m.Name, new { placeholder = "SunnyVale Acres", required = "required" })
            @Html.ValidationMessageFor(m => m.Name)

       <br />

            <label for="NumberOfHoles">Number of Holes</label>
            <br />

            
            <select name ="NumberOfHoles" class="form-control" required>
                <option>9</option>
                <option>18</option>

            </select>

        <br />

            <label for="LengthInYards">Enter Length in Yards</label>
            @Html.TextBoxFor(m => m.LengthInYards, new { placeholder = "7000", required = "required" })
            @Html.ValidationMessageFor(m => m.LengthInYards)

        <br />
            <label for="Par">Enter Par of Course</label>
            @Html.TextBoxFor(m => m.Par, new { placeholder = "70", required = "required" })
            @Html.ValidationMessageFor(m => m.Par)

        </div>

        <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-cloud-upload"></span> Add Course</button>
    }

</div>

