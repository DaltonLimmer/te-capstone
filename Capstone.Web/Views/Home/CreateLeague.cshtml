
@model Capstone.Web.Models.League

<style>
    .modal-header, h4, .close {
        background-color: #5cb85c;
        color: white !important;
        text-align: center;
        font-size: 30px;
    }
</style>

<div id="createLeague">

    <div class="modal-header" style="padding:35px 50px;">
        <h4><span class="glyphicon glyphicon-plus-sign"></span> Create a New League</h4>
    </div>

    @using (Html.BeginForm("CreateLeague", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="Name">Enter League Name:</label>
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Enter a name for you new league" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            <label for="CourseId">Choose Course:</label>
            <br />
            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="CourseId">
                <option value="">Select</option>
                @foreach (var c in Model.courses)
                {
                    <option value="@c.ID"> @c.Name  ||  Hole Count: @c.NumberOfHoles  ||  Par: @c.Par </option>
                }
            </select>
        </div>

        <button style="width: 20%; display: block; margin: 0 auto;" type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-cloud-upload"></span> Create League</button>
    }

</div>
