@model Capstone.Web.Models.ViewModels.Registration
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="register">
    <h2>Registration</h2>

    @using (Html.BeginForm("PostUserRegistration", "Home", FormMethod.Post))
    {
        <div>
            <span>First Name: @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Don" })</span>
            @Html.ValidationMessageFor(m => m.FirstName)
            
        </div>

        <div>
            <span>Last Name: @Html.TextBoxFor(m => m.LastName, new { placeholder = "Joe" })</span>
            @Html.ValidationMessageFor(m => m.LastName)
        </div>

        <div>
            <span>User Name: @Html.TextBoxFor(m => m.UserName, new { placeholder = "DonJoe55" })</span>
            @Html.ValidationMessageFor(m => m.UserName)
            @Html.ValidationMessage("username-exists")
        </div>
        <div>
            <span>Password: @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })</span>
            @Html.ValidationMessageFor(m => m.Password)
            
        </div>
        <div>
            <span>Confirm Password: @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })</span>
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <button>Register</button>
    }
</div>
