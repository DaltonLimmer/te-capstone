@model Capstone.Web.Models.ViewModels.Login
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="login">

    <div class="modal-header" style="padding:35px 50px;">
        <h4><span class="glyphicon glyphicon-lock"></span> Sign In</h4>
    </div>

    @using (Html.BeginForm("PostUserLogin", "Home", FormMethod.Post))
    {
        @Html.ValidationMessage("invalid-credentials")
        <div class="form-group">
            <label for="Username"><span class="glyphicon glyphicon-user"></span>Username</label>
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter username" })
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="form-group">
            <label for="Password"><span class="glyphicon glyphicon-certificate"></span>Password</label>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button><br />
            <p style="text-align: center">@Html.ActionLink("Don't have an account? Click here to register.", "Registration")</p>
    }
</div>