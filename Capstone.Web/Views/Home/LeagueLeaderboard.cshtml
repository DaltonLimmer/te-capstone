@using Capstone.Web.Models;
@using Capstone.Web.Models.ViewModels;
@model Leaderboard
@{ 
    Model.Users.Sort((x, y) => x.AverageScore.CompareTo(y.AverageScore));
}

<div>
    <section style="min-height: 400px" class="container" id="features">
        <h1 style="text-align: center">League Leaderboard</h1>
        <br />
        <section>
            <section class="col-md-6">
                <h2 style="text-align: center">Name</h2>
                <br />
                @foreach (LeaderboardUser user in Model.Users)
                {
                    <h5 style="text-align: center">@user.FirstName @user.LastName</h5>
                }
            </section>
            <section class="col-md-6">
                <h2 style="text-align: center">Average Score</h2>
                <br />
                @foreach (LeaderboardUser user in Model.Users)
                {
                    <h5 style="text-align: center">@user.AverageScore</h5>
                    <hr />
                }
            </section>
        </section>
    </section>
</div>